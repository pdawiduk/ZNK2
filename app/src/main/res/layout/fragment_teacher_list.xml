<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.shogun.znk.fragments.TeacherListFragment"
    >


    <TextView
        android:id="@+id/tvTeacherTitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Prowadzacy"
        android:textSize="35sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorTulRed"
        android:textAlignment="center"
        android:layout_marginTop="90dp"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTeachersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTeacherTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>



</android.support.constraint.ConstraintLayout>
